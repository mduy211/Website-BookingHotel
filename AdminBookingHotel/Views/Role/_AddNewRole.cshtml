@model AdminBookingHotel.Models.UserAndRoleViewModels.RoleViewModel

<form asp-action="AddNewRole" role="form">
<div class="modal-dialog modal-md">
    <div class="modal-content">
        <div class="modal-header">
            <h5 class="modal-title" id="myModalLabel">Thêm Mới Role</h5>
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
        </div>
        <div class="modal-body">
                <!-- Row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-body">                         
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="RoleName">Role</label>
                                <div class="input-group">
                                    <input type="text" asp-for="RoleName" class="form-control">
                                    <span asp-validation-for="RoleName" class="text-warning"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="RoleNomalizedName">Tên Role</label>
                                <div class="input-group">
                                    <input type="text" asp-for="RoleNomalizedName" class="form-control">
                                    <span asp-validation-for="RoleNomalizedName" class="text-warning"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
        </div>
        <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Lưu</button>
            <button type="button" class="btn btn-warning" data-dismiss="modal">Đóng</button>
        </div>
        <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
</div>
</form>

