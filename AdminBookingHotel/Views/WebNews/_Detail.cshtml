@model DataAccess.Models.NewsModels.NewsViewModel
<form asp-action="Update" asp-controller="WebNews" method="post" role="form">
    <div class="modal-dialog modal-md">
        <div class="modal-content">
            <div class="modal-header bg-purple">
                <h5 class="modal-title text-white" >News Detail</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <!-- Row -->
                <div class="row">
                    <div class="col-lg-12">
                        <div class="form-body">
                            <input type="hidden" value="@Model.Id" asp-for="Id"/>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="Title">Title</label>
                                <input class="form-control filled-input" readonly type="text" value="@Model.Title" asp-for="Title" class="form-control" required>
                                <span asp-validation-for="Title" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="SumContent">Summary</label>
                                <input class="form-control filled-input" type="text" value="@Model.SumContent" asp-for="SumContent" class="form-control" required>
                                <span asp-validation-for="SumContent" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="NewsContent">Content</label>
                                <textarea rows="7" class="form-control filled-input"  value="@Model.NewsContent" asp-for="NewsContent" class="form-control" required
                                ></textarea>
                                <span asp-validation-for="NewsContent" class="text-warning"></span>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2" asp-for="Source">Source</label>
                                <input class="form-control filled-input" type="text" value="@Model.Source" asp-for="Source" class="form-control" required>
                                <span asp-validation-for="Source" class="text-warning"></span>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
            <!-- /.modal-content -->
            <div class="modal-footer">
                <button type="submit" class="btn btn-primary">Lưu</button>
                <button type="button" class="btn btn-warning" data-dismiss="modal">Đóng</button>
            </div>
        </div>
        <!-- /.modal-dialog -->
    </div>
</form>




