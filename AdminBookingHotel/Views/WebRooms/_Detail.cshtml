﻿@using System.Net;
@model DataAccess.Models.RoomsModels.RoomsViewModel
@{
    decimal? amount = @Model?.Price;
}
<form asp-action="Update" method="post" role="form" id="RoomsDetailModal">
    <div class="modal-dialog modal-xl">
        <div class="modal-content">
            <div class="modal-header bg-primary">
                <h5 class="modal-title text-white">Phòng: #@Model?.Id - Tình Trạng: @Model?.Active</h5>
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <ul class="nav nav-tabs  mb-3 mt-3" id="iconTab" role="tablist">
                        <li class="nav-item">
                            <a class="nav-link active" id="animated-underline-home-tab" href="#logInfoTab" data-toggle="tab" role="tab" aria-controls="icon-home" aria-selected="true"> Nội Dung</a>
                    </ul>
                    <div class="tab-content">
                        <div class="tab-pane fade show active" id="logInfoTab" role="tabpanel" aria-labelledby="icon-home-tab">
                            <input asp-for="Id" type="hidden" id="modelId" value="@Model?.Id">
                            <input type="hidden" value="@Model?.ImgCodeByUserId" asp-for="ImgCodeByUserId" id="imgCodeByUserId" />
                            <div class="row">
                                <div class="col-lg-4">
                                    <label asp-for="RoomName" class="control-label mb-10">Phòng</label>
                                    <input asp-for="RoomName" type="text" class="form-control"
                                           id="modelRoomName" name="modelRoomName" value="@Model?.RoomName">
                                    <span asp-validation-for="RoomName" class="text-warning"></span>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="RoomType" class="control-label mb-10">Loại Giường</label>
                                        <select asp-for="RoomType" class="selectpicker form-control" id="modelRoomType" required title="Chọn Loại Giường"
                                                data-tickIcon="fa fa-check" data-actions-box="true" multiple value="@Model?.RoomType">
                                        </select>
                                        <input type="hidden" id="RoomTypeString" value="@Model?.RoomType">
                                    </div>
                                </div>
                                <div class="col-lg-3">
                                    <div class="form-group">
                                        <label asp-for="RoomHuman" class="control-label mb-10">Số Người</label>
                                        <select asp-for="RoomHuman" class="selectpicker form-control" id="modelRoomHuman" required title="Chọn Sô Người"
                                                data-tickIcon="fa fa-check" data-actions-box="true" multiple value="@Model?.RoomHuman">
                                        </select>
                                        <input type="hidden" id="RoomHumanString" value="@Model?.RoomHuman">
                                    </div>
                                </div>
                                <div class="col-lg-2">
                                    <label asp-for="Price" class="control-label mb-10">Giá</label>
                                    <input asp-for="Price" type="text" class="form-control" name="Price" id="modelPrice"
                                           value="@amount?.ToString("#,##0")">
                                    <span asp-validation-for="Price" class="text-warning"></span>
                                </div>
                                <div class="col-lg-2">
                                    <label asp-for="RoomSize" class="control-label mb-10">Kích Thước</label>
                                    <input asp-for="RoomSize" type="text" class="form-control"
                                           id="modelRoomSize" name="modelRoomSize" value="@Model?.RoomSize">
                                    <span asp-validation-for="RoomSize" class="text-warning"></span>
                                </div>
                                <div class="form-group">
                                    <label class="control-label mb-2" asp-for="Active">Active/Inactive</label>
                                    <div class="input-group">
                                        <label asp-for="Active"
                                               class="switch s-icons s-outline s-outline-success">
                                            <input type="checkbox" asp-for="Active" id="modelActive" checked="@Model?.Active">
                                            <span class="slider round"></span>
                                        </label>
                                    </div>
                                </div>
                            </div>
                            <hr class="light-grey-hr" />
                            <!-- Row -->
                            <div class="form-group">
                                <div class="col-lg-12">
                                    <textarea class="form-control" asp-for="Description" rows="5" id="modelDescription" placeholder="Nội dung ghi chú">@Model?.Description</textarea>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="control-label mb-2">Feature Image</label>
                                <div class="input-group">
                                    <input type="file" id="featureImg" name="featureImg">
                                    <button type="button" id="uploadImg">Upload</button>

                                    <img id="imagePreview" style="max-width: 100%; max-height: 300px;" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <div class="form-actions mt-10">
                    <input id="updateBtn" type="button" class="btn btn-success" value="Lưu" />
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
</form>

<script src="~/admin/dist/js/rooms/roomsdetail.js"></script>