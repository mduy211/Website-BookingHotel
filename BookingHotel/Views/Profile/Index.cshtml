﻿@{
    ViewData["Title"] = "Thông tin tài khoản";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .box-full-manage {
        background: #edeef1;
        padding: 120px 0px;
    }

    .col-md-3 {
        width: 25%;
    }

    .col-lg-9 {
        width: 75%
    }

    

    .box-full-manage .user-box-full-main .user-box-item {
        background: #ffffff;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 15px;
        position: relative;
    }

    .points-box-table-score {
        background: #0064d2;
        border-radius: 8px;
        padding: 20px;
    }

        .points-box-table-score h3 {
            margin: 0px;
            padding: 0px;
            display: inline-block;
            color: #ffffff;
            font-size: 16px;
            font-family: 'os_semi_bold';
        }

        .points-box-table-score .box-title span {
            font-size: 14px;
            color: #ffffff;
            float: right;
            cursor: pointer;
        }

        .points-box-table-score .box-score {
            margin-top: 22px;
            font-size: 20px;
            color: #fff;
            font-family: 'os_semi_bold';
        }

            .points-box-table-score .box-score img {
                position: relative;
                top: -2px;
            }

    .box-full-manage .user-box-full-main .user-box-item h2 {
        margin: 0px;
        padding: 0px;
        font-size: 20px;
        color: #22313f;
        font-family: 'os_semi_bold';
        margin-bottom: 10px;
    }

    .box-full-manage .user-box-full-main .user-box-item .box-content {
        padding-top: 15px;
    }

    .box-content-gifts ul {
        margin: 0px;
        padding: 0px;
    }

        .box-content-gifts ul li {
            list-style: none;
            display: inline-block;
            margin: 10px;
            border-radius: 8px;
            border: solid 1px #ebedf6;
            min-width: calc(33% - 20px);
            vertical-align: top;
            text-align: center;
            padding: 15px;
        }

            .box-content-gifts ul li .box-title {
                font-size: 14px;
                color: #22313f;
                font-family: 'os_semi_bold';
                text-align: left;
                margin-bottom: 15px;
                display: block;
            }

                .box-content-gifts ul li .box-title span {
                    background: #ebf1ff;
                    color: #0064d2;
                    font-family: 'os_semi_bold';
                    display: inline-block;
                    padding: 4px 10px;
                    border-radius: 16px;
                }

            .box-content-gifts ul li .box-img {
                height: 100px;
                overflow: hidden;
            }

            .box-content-gifts ul li .box-gifts-action {
                margin-top: 20px;
            }

                .box-content-gifts ul li .box-gifts-action .btn-submit-form-gifts[disabled] {
                    opacity: 0.5;
                }

                .box-content-gifts ul li .box-gifts-action .btn-submit-form-gifts {
                    background: #0064d2;
                    border: 0px;
                    color: #fff;
                    width: calc(100% - 40px);
                    border-radius: 5px;
                    height: 43px;
                    font-family: 'os_regular';
                }
</style>
<div class="box-full-manage">
    <div class="container">
        <div class="col-ld-3 col-md-3">
            <div class="box-sidebar-user">
                <div class="box-sidebar user-inner">
                    <div class="box-info-top">
                        <div class="box-img"> <img src="" alt="avatar"> </div>
                        <div class="box-info">
                            <div class="fullname">Hữu Đan</div>
                            <div class="email-phone">akneon1@gmail.com</div>
                        </div>
                    </div>
                    <div class="box-info-menu">
                        <ul>
                            <li class="type-item active"><a href="https://www.vietnambooking.com/user-manage?type=my-points"><img src="https://data.vietnambooking.com/user/svg/icon_coin.svg" alt="Điểm đổi quà"> Điểm đổi quà </a></li>
                            <li class="type-cross"></li>
                            <li class="type-item "><a href="https://www.vietnambooking.com/user-manage?type=my-order"><img src="https://data.vietnambooking.com/user/svg/icon_order.svg" alt="Đặt chỗ của tôi"> Đặt chỗ của tôi </a></li>
                            <li class="type-item "><a href="https://www.vietnambooking.com/user-manage?type=favorite"><img src="https://data.vietnambooking.com/user/svg/icon_favorite.svg" alt="Sản phẩm yêu thích"> Sản phẩm yêu thích </a></li>
                            <li class="type-cross"></li>
                            <li class="type-item "><a asp-controller="profile" asp-action="index"><img src="https://data.vietnambooking.com/user/svg/icon_account.svg" alt="Tài khoản"> Tài khoản </a></li>
